<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ServletCreateItem</servlet-name>
        <servlet-class>br.inf.ufg.crud.servlets.ServletCreateItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletUpdateItem</servlet-name>
        <servlet-class>br.inf.ufg.crud.servlets.ServletUpdateItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletDeleteItem</servlet-name>
        <servlet-class>br.inf.ufg.crud.servlets.ServletDeleteItem</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletListItems</servlet-name>
        <servlet-class>br.inf.ufg.crud.servlets.ServletListItems</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletGetItem</servlet-name>
        <servlet-class>br.inf.ufg.crud.servlets.ServletGetItem</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletCreateItem</servlet-name>
        <url-pattern>/ServletCreateItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletUpdateItem</servlet-name>
        <url-pattern>/ServletUpdateItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletDeleteItem</servlet-name>
        <url-pattern>/ServletDeleteItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletListItems</servlet-name>
        <url-pattern>/ServletListItems</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletGetItem</servlet-name>
        <url-pattern>/ServletGetItem</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
